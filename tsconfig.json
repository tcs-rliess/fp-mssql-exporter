{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "skipLibCheck": true,
        "lib": [
            "ES2020"
        ],
        "target": "ES2020",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "watch": false,
        "outDir": "app",
        "esModuleInterop": true
    },
    "files": [
        "_src/app.ts",
        "_src/config.ts",
        "_src/interfaces.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}